# MM Admin Panel - Development
# ============================

FROM nginx:alpine

# Устанавливаем необходимые пакеты
RUN apk add --no-cache curl

# Копируем конфигурацию Nginx для разработки
COPY nginx.development.conf /etc/nginx/nginx.conf

# Копируем файлы админки
COPY admin/ /usr/share/nginx/html/

# Создаем директорию для логов
RUN mkdir -p /var/log/nginx && \
    chown -R nginx:nginx /var/log/nginx /usr/share/nginx/html

# Открываем порт
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost/ || exit 1

# Запускаем Nginx
CMD ["nginx", "-g", "daemon off;"]

